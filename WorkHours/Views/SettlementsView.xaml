<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.Views.SettlementsView"
             Title="SettlementsView">

    <VerticalStackLayout Padding="20"
                         Spacing="10">
        <Label Text="Rozliczenia"
               FontSize="24"
               FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding Settlements}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="0,5"
                           HasShadow="True"
                           BackgroundColor="{DynamicResource SecondaryColor}">
                        <VerticalStackLayout>
                            <Label Text="{Binding PeriodLabel}"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding HoursDisplay}" />
                            <Label Text="{Binding AmountDisplay}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Rozlicz bieżący tydzień"
                Command="{Binding SettleCurrentWeekCommand}"
                StyleClass="ButtonMain" />
    </VerticalStackLayout>

</ContentPage>