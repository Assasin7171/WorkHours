<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WorkHours.ViewModels"
             xmlns:entities="clr-namespace:WorkHours.Database.Entities"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             HideSoftInputOnTapped="True"
             x:Class="WorkHours.Views.SettingsView">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Margin="20,10"
                                 Padding="5"
                                 x:DataType="vm:SettingsViewModel"
                                 Spacing="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Dodaj nową lokalizację"
                           TextColor="{StaticResource TextPrimary}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           FontSize="24" />
                    <Frame BackgroundColor="{StaticResource EntryBackground}" CornerRadius="8" Padding="10,8"
                           HasShadow="False">
                        <FlexLayout Direction="Row"
                                    JustifyContent="SpaceBetween">
                            <HorizontalStackLayout Spacing="10"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center">
                                <Image Source="edit_location.png"
                                       WidthRequest="20" HeightRequest="20"
                                       VerticalOptions="Center" />
                                <Label Text="Nazwa"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="16" />
                            </HorizontalStackLayout>
                            <Entry Text="{Binding NewLocation}"
                                   StyleClass="EntryMain" />
                        </FlexLayout>
                    </Frame>
                    <Frame BackgroundColor="{StaticResource EntryBackground}" CornerRadius="8" Padding="10,8"
                           HasShadow="False">
                        <FlexLayout Direction="Row"
                                    JustifyContent="SpaceBetween">
                            <HorizontalStackLayout Spacing="10"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center">
                                <Image Source="edit_location.png"
                                       WidthRequest="20" HeightRequest="20"
                                       VerticalOptions="Center" />
                                <Label Text="Opis"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="16" />
                            </HorizontalStackLayout>
                            <Entry Text="{Binding NewLocationDescription}"
                                   BackgroundColor="{StaticResource BorderLight}"
                                   TextColor="{StaticResource TextPrimary}"
                                   StyleClass="EntryMain" />
                        </FlexLayout>
                    </Frame>
                    <Button Text="Dodaj miejsce"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}"
                            TextColor="White"
                            Command="{Binding AddNewPlaceToDbCommand}"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50" />

                    <BoxView HeightRequest="1"
                             BackgroundColor="{StaticResource BorderLight}"
                             Margin="0,30" />

                    <Label Text="Ustawienia stawki"
                           TextColor="{StaticResource TextPrimary}"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           FontSize="24" />

                    <Frame BackgroundColor="{StaticResource EntryBackground}"
                           CornerRadius="8"
                           Padding="10,8"
                           HasShadow="False">
                        <FlexLayout Direction="Row"
                                    JustifyContent="SpaceBetween">
                            <HorizontalStackLayout Spacing="10"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Center">
                                <Image Source="money.png"
                                       WidthRequest="20" HeightRequest="20"
                                       VerticalOptions="Center" />
                                <Label Text="Stawka"
                                       TextColor="{StaticResource TextPrimary}"
                                       FontSize="16" />
                            </HorizontalStackLayout>
                            <Entry Text="{Binding WorkRateValue}"
                                   StyleClass="EntryMain" />
                        </FlexLayout>
                    </Frame>
                    <Button Text="Zapisz stawkę"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Secondary}}"
                            TextColor="White"
                            Command="{Binding SetWorkRateCommand}"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            HeightRequest="50" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <toolkit:Expander Command="{Binding ChangeArrowImageCommand}">
                        <toolkit:Expander.Header>
                            <Frame BackgroundColor="{StaticResource EntryBackground}"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   Margin="0,0,0,10">
                                <FlexLayout Direction="Row"
                                            JustifyContent="SpaceBetween"
                                            AlignItems="Center">
                                    <Label Text="Miejsca pracy"
                                           TextColor="{StaticResource TextPrimary}"
                                           FontSize="20"
                                           Padding="5"
                                           FontAttributes="Bold" />
                                    <Image Source="{Binding ArrowImage}"
                                           WidthRequest="20" HeightRequest="20" VerticalOptions="Center" />
                                </FlexLayout>
                            </Frame>
                        </toolkit:Expander.Header>
                        <toolkit:Expander.Content>
                            <ScrollView MaximumHeightRequest="300">
                                <CollectionView ItemsSource="{Binding Places}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical"
                                                           ItemSpacing="10" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="entities:Place">
                                            <Frame BackgroundColor="{StaticResource EntryBackground}"
                                                   CornerRadius="8"
                                                   Padding="10,8"
                                                   HasShadow="False"
                                                   Margin="0,5"
                                                   HeightRequest="50">
                                                <FlexLayout Direction="Row"
                                                            JustifyContent="SpaceBetween"
                                                            AlignItems="Center">
                                                    <Label Text="{Binding Name, StringFormat='{0}'}"
                                                           TextColor="{StaticResource TextPrimary}"
                                                           FontSize="18" />
                                                    <Label Text="{Binding Description, StringFormat='{0}'}"
                                                           TextColor="{StaticResource TextPrimary}"
                                                           FontSize="18" />
                                                </FlexLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </ScrollView>
                        </toolkit:Expander.Content>
                    </toolkit:Expander>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>